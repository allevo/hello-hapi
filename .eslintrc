{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-console": ["error", { allow: ["warn", "error"] }],
    "indent": ["error", 2, { "SwitchCase": 1}]
  },
  "globals": {
    "Set": true,
    "Promise": true
  }
}
